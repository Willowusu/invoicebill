<!DOCTYPE html>

<html lang="en">
<!--begin::Head-->
<%- include('partials/mainHead')%>
  <script type="module" src="/assets/js/accountSettingsCompany.js"></script>
  <script type="module" src="/assets/js/accountSettingsNotifications.js"></script>
  <script type="module" src="/assets/js/accountSettingsProfile.js"></script>
  <!--end::Head-->
  <!--begin::Body-->

  <body id="kt_app_body" data-kt-app-header-fixed="true" data-kt-app-header-fixed-mobile="true"
    data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-push-header="true"
    data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true"
    class="app-default">
    <!--begin::Theme mode setup on page load-->
    <script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
    <!--end::Theme mode setup on page load-->
    <!--begin::App-->
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
      <!--begin::Page-->
      <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
        <!--begin::Header-->
        <div id="kt_app_header" class="app-header">
          <!--begin::Header container-->
          <div class="app-container container-fluid d-flex align-items-stretch flex-stack" id="kt_app_header_container">
            <!--begin::Sidebar toggle-->
            <div class="d-flex align-items-center d-block d-lg-none ms-n3" title="Show sidebar menu">
              <div class="btn btn-icon btn-active-color-primary w-35px h-35px me-2" id="kt_app_sidebar_mobile_toggle">
                <i class="ki-outline ki-abstract-14 fs-2"></i>
              </div>
              <!--begin::Logo image-->
              <a href="index.html">
                <img alt="Logo" src="assets/media/logos/demo42-small.svg" class="h-30px" />
              </a>
              <!--end::Logo image-->
            </div>
            <!--end::Sidebar toggle-->
            <!--begin::Toolbar wrapper-->

            <!--end::Navbar-->
          </div>
          <!--end::Header container-->
        </div>
        <!--end::Header-->
        <!--begin::Wrapper-->
        <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
          <!--begin::Sidebar-->
          <%- include('partials/mainSidebar') %>
            <!--end::Sidebar-->
            <!--begin::Main-->
            <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
              <!--begin::Content wrapper-->
              <div class="d-flex flex-column flex-column-fluid">
                <!--begin::Toolbar-->
                <div id="kt_app_toolbar" class="app-toolbar pt-5 pt-lg-10">
                  <!--begin::Toolbar container-->
                  <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack flex-wrap">
                    <!--begin::Toolbar wrapper-->
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                      <!--begin::Page title-->
                      <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                        <!--begin::Title-->
                        <h1
                          class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                          Account Settings</h1>
                        <!--end::Title-->
                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                          <!--begin::Item-->
                          <li class="breadcrumb-item text-muted">
                            <a href="/" class="text-muted text-hover-primary">Home</a>
                          </li>
                          <!--end::Item-->
                          <!--begin::Item-->
                          <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                          </li>
                          <!--end::Item-->
                          <!--begin::Item-->
                          <li class="breadcrumb-item text-muted">Account</li>
                          <!--end::Item-->
                        </ul>
                        <!--end::Breadcrumb-->
                      </div>
                      <!--end::Page title-->
                    </div>
                    <!--end::Toolbar wrapper-->
                  </div>
                  <!--end::Toolbar container-->
                </div>
                <!--end::Toolbar-->
                <!--begin::Content-->
                <div id="kt_app_content" class="app-content flex-column-fluid">
                  <!--begin::Content container-->
                  <div id="kt_app_content_container" class="app-container container-xxl">
                    <ul class="nav nav-tabs nav-line-tabs nav-line-tabs-2x mb-5 fs-6">
                      <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#kt_tab_pane_4">Profile</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_5">Company</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#kt_tab_pane_6">Notifications</a>
                      </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                      <div class="tab-pane fade show active" id="kt_tab_pane_4" role="tabpanel">
                        <div class="shadow-sm card p-7 mb-4" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Personal Information</h2>
                            <p class="text-muted">Update your personal details</p>
                          </div>

                          <div class="mb-5">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name">
                          </div>

                          <div class="mb-5">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email">
                          </div>

                          <div class="mb-5">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone">
                          </div>

                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" id="updateUserProfile" class="btn btn-primary mt-3">Save
                              Changes</button>
                          </div>
                        </div>

                        <div class="shadow-sm card p-7" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Password</h2>
                            <p class="text-muted">Update your password</p>
                          </div>

                          <div class="mb-5">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" id="currentPassword" class="form-control">
                          </div>

                          <div class="d-flex align-items-center justify-content-between mb-5 gap-3">
                            <div>
                              <label for="newPassword" class="form-label">New Password</label>
                              <input type="password" id="newPassword" class="form-control">
                            </div>

                            <div>
                              <label for="confirmPassword" class="form-label">Confirm Password</label>
                              <input type="password" id="confirmNewPassword" class="form-control">
                            </div>
                          </div>


                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" id="updatePassword" class="btn btn-primary mt-3">Update
                              Password</button>
                          </div>
                        </div>
                      </div>

                      <div class="tab-pane fade" id="kt_tab_pane_5" role="tabpanel">
                        <div class="shadow-sm card p-7 mb-4" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Company Information</h2>
                            <p class="text-muted">Update your company details</p>
                          </div>

                          <div class="mb-5">
                            <label for="companyName" class="form-label">Company Name</label>
                            <input type="text" class="form-control" id="accountName">
                          </div>

                          <div class="mb-5">
                            <label for="companyEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="accountEmail">
                          </div>

                          <div class="mb-5">
                            <label for="address" class="form-label">Address</label>
                            <textarea type="tel" class="form-control" id="accountAddress"></textarea>
                          </div>

                          <div class="mb-5">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="accountPhone">
                          </div>
                          <div class="mb-5">
                            <label for="accountLogoInput" class="form-label">
                              Logo <span class="text-muted">(upload your logo here max:500kb)</span>
                            </label>
                            <section class="d-flex align-items-center justify-content-end gap-2">
                              <!-- This is for previewing the logo -->
                              <img src="" id="accountLogoPreview" class="w-auto h-100 object-fit-contain" style="max-width: 50px;" height="100"
                                alt="Logo Preview">

                              <!-- This is for selecting the file -->
                              <input type="file" class="form-control" id="accountLogoInput" accept="image/*">
                            </section>
                          </div>


                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" class="btn btn-primary mt-3" id="updateAccountSettings">Save Changes</button>
                          </div>
                        </div>

                        <div class="shadow-sm card p-7 mb-4" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Invoice Settings </h2>
                            <p class="text-muted">Customize your invoice settings</p>
                          </div>

                          <div class="mb-5">
                            <label for="fullName" class="form-label">Invoice Number Prefix</label>
                            <input type="text" class="form-control" value="INV-">
                          </div>

                          <div class="mb-5">
                            <label for="email" class="form-label">Default Payment Terms(days)</label>
                            <input type="number" class="form-control" value="30">
                          </div>

                          <div class="mb-5">
                            <label for="phone" class="form-label">Default Tax Rate (/%)</label>
                            <input type="number" class="form-control" value="0" id="phone">
                          </div>

                          <div class="mb-5">
                            <label for="accountCreated" class="form-label">Default Invoice Notes</label>
                            <textarea class="form-control"></textarea>
                          </div>


                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" class="btn btn-primary mt-3">Save Changes</button>
                          </div>
                        </div>
                      </div>
                      <div class="tab-pane fade" id="kt_tab_pane_6" role="tabpanel">
                        <div class="shadow-sm card p-7 mb-4" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Email Notifications</h2>
                            <p class="text-muted">Manage your email and notification preferences</p>
                          </div>

                          <div class="d-flex align-items-center justify-content-between">
                            <div>
                              <h5>Invoice Sent</h5>
                              <p class="text-muted">Receive an email when an invoice is sent</p>
                            </div>
                            <div class="form-check form-switch form-check-custom form-check-solid">
                              <input class="form-check-input" type="checkbox" value="" id="flexSwitchDefault" />
                            </div>
                          </div>

                          <hr>

                          <div class="d-flex align-items-center justify-content-between">
                            <div>
                              <h5>Payment Received</h5>
                              <p class="text-muted">Receive an email when a payment is received</p>
                            </div>
                            <div class="form-check form-switch form-check-custom form-check-solid">
                              <input class="form-check-input" type="checkbox" value="" id="flexSwitchDefault" />
                            </div>
                          </div>

                          <hr>

                          <div class="d-flex align-items-center justify-content-between">
                            <div>
                              <h5>Invoice Overdue</h5>
                              <p class="text-muted">Receive an email when an invoice becomes overdue</p>
                            </div>
                            <div class="form-check form-switch form-check-custom form-check-solid">
                              <input class="form-check-input" type="checkbox" value="" id="flexSwitchDefault" />
                            </div>
                          </div>

                          <hr>

                          <div class="d-flex align-items-center justify-content-between">
                            <div>
                              <h5>Client Reminders</h5>
                              <p class="text-muted">Receive an email when reminders are sent to clients</p>
                            </div>
                            <div class="form-check form-switch form-check-custom form-check-solid">
                              <input class="form-check-input" type="checkbox" value="" id="flexSwitchDefault" />
                            </div>
                          </div>

                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" class="btn btn-primary mt-3">Save Preferences</button>
                          </div>
                        </div>

                        <div class="shadow-sm card p-7" style="max-width: 500px;">
                          <div class="mb-5">
                            <h2>Automatic Reminders</h2>
                            <p class="text-muted">Configure automatic reminder settings</p>
                          </div>

                          <div class="d-flex align-items-center justify-content-between">
                            <div>
                              <h5>Enable Automatic Reminders</h5>
                              <p class="text-muted">Automatically send reminders for upcoming and overdue invoices</p>
                            </div>
                            <div class="form-check form-switch form-check-custom form-check-solid">
                              <input class="form-check-input" type="checkbox" value="" id="flexSwitchDefault" />
                            </div>
                          </div>

                          <hr>

                          <div class="mb-3">
                            <label for="dueDateReminder" class="form-label">Days Before Due Date</label>
                            <input type="number" class="form-control" id="dueDateReminder"
                              aria-describedby="dueDateHelp">
                            <div id="dueDateHelp" class="form-text">Send a reminder this many days before the invoice
                              is due</div>
                          </div>

                          <hr>

                          <div class="mb-3">
                            <label for="dueDateReminder" class="form-label">Days Before Due Date</label>
                            <input type="number" class="form-control" id="dueDateReminder"
                              aria-describedby="dueDateHelp">
                            <div id="dueDateHelp" class="form-text">Send a reminder this many days before the invoice
                              is due</div>
                          </div>
                          <div class="d-flex justify-content-end align-items-center">
                            <button type="button" class="btn btn-primary mt-3">Save Settings</button>
                          </div>
                        </div>

                      </div>
                    </div>


                  </div>
                  <!--end::Content container-->
                </div>
                <!--end::Content-->
              </div>
              <!--end::Content wrapper-->

              <%- include('partials/footer') %>

                <!--begin::Javascript-->
                <%- include('partials/mainScript') %>
                  <!--end::Javascript-->
  </body>
  <!--end::Body-->

</html>